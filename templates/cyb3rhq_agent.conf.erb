  <client>
  <server>
  <%- if @cyb3rhq_reporting_endpoint then -%>
    <address><%= @cyb3rhq_reporting_endpoint %></address>
  <%- end -%>
  <%- if @ossec_protocol then -%>
    <protocol><%= @ossec_protocol %></protocol>
  <%- end -%>
    <port><%= @ossec_port %></port>
    <max_retries><%= @cyb3rhq_max_retries %></max_retries>
    <retry_interval><%= @cyb3rhq_retry_interval %></retry_interval>
  </server>
  <%- if @operatingsystem == 'Ubuntu' or @operatingsystem == 'ubuntu' -%>
    <config-profile><%= @ossec_config_ubuntu_profiles %></config-profile>
  <%- elsif @operatingsystem == 'CentOS' or @operatingsystem == 'Centos' or @operatingsystem == 'centos' -%>
    <config-profile><%= @ossec_config_centos_profiles %></config-profile>
  <%- end -%>
  <%- if @ossec_notify_time then -%>
    <notify_time><%= @ossec_notify_time %></notify_time>
  <%- end -%>
  <%- if @ossec_time_reconnect then -%>
    <time-reconnect><%= @ossec_time_reconnect %></time-reconnect>
  <%- end -%>
  <%- if @ossec_crypto_method then -%>
    <crypto_method><%= @ossec_crypto_method %></crypto_method>
  <%- end -%>
  <%- if @ossec_auto_restart then -%>
    <auto_restart><%= @ossec_auto_restart %></auto_restart>
  <%- end -%>
  <%- if @cyb3rhq_enrollment_enabled == 'yes' then -%>
  <enrollment>
    <enabled><%= @cyb3rhq_enrollment_enabled %></enabled>
    <%- if @cyb3rhq_enrollment_manager_address then -%>
    <manager_address><%= @cyb3rhq_enrollment_manager_address %></manager_address>
    <%- end -%>
    <%- if @cyb3rhq_enrollment_port then -%>
    <port><%= @cyb3rhq_enrollment_port %></port>
    <%- end -%>
    <%- if @cyb3rhq_enrollment_agent_name then -%>
    <agent_name><%= @cyb3rhq_enrollment_agent_name %></agent_name>
    <%- end -%>
    <%- if @cyb3rhq_enrollment_groups then -%>
    <groups><%= @cyb3rhq_enrollment_groups %></groups>
    <%- end -%>
    <%- if @cyb3rhq_enrollment_agent_address then -%>
    <agent_address><%= @cyb3rhq_enrollment_agent_address %></agent_address>
    <%- end -%>
    <%- if @cyb3rhq_enrollment_ssl_cipher then -%>
    <ssl_cipher><%= @cyb3rhq_enrollment_ssl_cipher %></ssl_cipher>
    <%- end -%>
    <%- if @cyb3rhq_enrollment_server_ca_path then -%>
    <server_ca_path><%= @cyb3rhq_enrollment_server_ca_path %></server_ca_path>
    <%- end -%>
    <%- if @cyb3rhq_enrollment_agent_cert_path then -%>
    <agent_certificate_path><%= @cyb3rhq_enrollment_agent_cert_path %></agent_certificate_path>
    <%- end -%>
    <%- if @cyb3rhq_enrollment_agent_key_path then -%>
    <agent_key_path><%= @cyb3rhq_enrollment_agent_key_path %></agent_key_path>
    <%- end -%>
    <%- if @cyb3rhq_enrollment_auth_pass_path then -%>
    <authorization_pass_path><%= @cyb3rhq_enrollment_auth_pass_path %></authorization_pass_path>
    <%- end -%>
    <%- if @cyb3rhq_enrollment_auto_method then -%>
    <auto_method><%= @cyb3rhq_enrollment_auto_method %></auto_method>
    <%- end -%>
    <%- if @cyb3rhq_delay_after_enrollment then -%>
    <delay_after_enrollment><%= @cyb3rhq_delay_after_enrollment %></delay_after_enrollment>
    <%- end -%>
    <%- if @cyb3rhq_enrollment_use_source_ip then -%>
    <use_source_ip><%= @cyb3rhq_enrollment_use_source_ip %></use_source_ip>
    <%- end -%>
  </enrollment>
  <%- end -%>
  </client>

  <logging>
    <log_format><%= @logging_log_format %></log_format>
  </logging>

  <client_buffer>
    <!-- Agent buffer options -->
    <disabled><%= @client_buffer_disabled %></disabled>
    <queue_size><%= @client_buffer_queue_size %></queue_size>
    <events_per_second><%= @client_buffer_events_per_second %></events_per_second>
  </client_buffer>

